
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relative01" >

    <EditText
        android:id="@+id/start_equivalence"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/end_equivalence"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="@string/start_equivalence" />
    
    <EditText
        android:id="@+id/end_equivalence"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_equivalence"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/end_equivalence" />
    
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/end_equivalence"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="@string/error_message"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:visibility="invisible" />
        
    <requestFocus />

    <Button
        android:id="@+id/randomise_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/randomise_end_button"
        android:layout_alignTop="@+id/end_equivalence"
        android:text="@string/randomise" 
        android:onClick="randomiseStart" />

    <Button
        android:id="@+id/randomise_end_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_equivalence"
        android:layout_alignBottom="@+id/start_equivalence"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/start_equivalence"
        android:onClick="randomiseEnd"
        android:text="@string/randomise" />
    
    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/error_message"
        android:layout_centerHorizontal="true"
        android:text="@string/start_button" 
        android:onClick="startEquivalence" />
	
</RelativeLayout>